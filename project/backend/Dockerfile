# -------- BUILD STAGE --------
FROM node:20-alpine AS builder
WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
# Ensure nest binary has execute permissions and build
RUN chmod +x node_modules/.bin/* && npm run build

# -------- RUN STAGE --------
FROM node:20-alpine
WORKDIR /app

COPY package*.json ./
RUN npm install --omit=dev

COPY --from=builder /app/dist ./dist

EXPOSE 3001
CMD ["node", "dist/main.js"]
